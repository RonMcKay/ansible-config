# {{ ansible_managed }}

[user]
	name = Philipp Oberdiek
	email = {{ git_email|default('git@oberdiek.net') }}
	signingkey = FF9BC62FEBB9B68E
[core]
	editor = nvim
	excludesfile = ~/.gitignore
	autocrlf = input
[alias]
	br = branch -vv
    bra = branch -vva
    cm = commit -v
	co = checkout
    cp = cherry-pick
    lg = log --graph -n 20 --decorate --abbrev-commit --pretty=oneline
    lga = log --graph --branches --remotes --tags --pretty=oneline --abbrev-commit --decorate -n 20
    rem = remote -v
    sa = stash apply
	sl = stash list
    spo = stash pop
    spu = stash push
	st = status
    sum = shortlog --summary --numbered --all --no-merges --email
    wd = diff --color-words="[^[:space:]]|([[:alnum:]]|UTF_8_GUARD)+"
[commit]
	template = ~/.gitmessage
    gpgSign = {{ 'true' if 'workstations' in group_names else 'false' }}
[color]
	ui = true
[tag]
    gpgSign = {{ 'true' if 'workstations' in group_names else 'false' }}
[gpg]
    program = gpg
