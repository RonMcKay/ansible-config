{{ ansible_managed }}

{% if in_wsl and 'workstations' in group_names %}
if /usr/bin/pgrep syncthing >/dev/null; then
    echo "Syncthing already started!"
else
    echo "Starting Syncthing..."
    syncthing -no-browser 1>/dev/null 2>&1 &
    disown
    echo "Access Syncthing at localhost:8384"
fi

{% endif %}
if [ -f ~/.bashrc ]; then
    source ~/.bashrc
fi
